<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_fb"
    android:orientation="vertical"
    android:background="@drawable/user"
    tools:context=".FeedBack">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/app_bar"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/feedback"
            android:textSize="20dp"
            android:padding="10dp"
            android:textStyle="bold|italic"
            android:textColor="@color/black"/>

        <View
            android:layout_width="250dp"
            android:layout_height="3dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@color/white"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginTop="25dp"
            android:text="How satisfied are you with MedHub?"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:padding="10dp"/>

        <EditText
            android:id="@+id/enter_feedback"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="35dp"
            android:padding="10dp"
            android:background="@drawable/input_bg"
            android:hint="Enter Your FeedBack"/>

        <TextView
            android:id="@+id/save_feedback"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:text="Send FeedBack"
            android:gravity="center"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/button_save_bg"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="685dp"
        android:gravity="center"
        android:background="@drawable/input_bg"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/feedback_to_home"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_bottom"/>

        <ImageView
            android:id="@+id/feedback_to_pat_pro"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/person_bottom" />

        <ImageView
            android:id="@+id/feedback_to_appointment"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/make_appointment" />

        <ImageView
            android:id="@+id/feedback_to_my_book"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/event_available_bottom" />

        <ImageView
            android:id="@+id/feedback_to_logout"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_bottom" />

    </LinearLayout>



</androidx.drawerlayout.widget.DrawerLayout>