<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Viewfour"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/user"
    android:orientation="vertical"
    tools:context=".ViewAppointment">


    <include
        layout="@layout/app_bar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="327dp" />


    <TextView
        android:id="@+id/view_appointment"
        android:layout_width="297dp"
        android:layout_height="51dp"
        android:layout_marginTop="127dp"
        android:layout_marginBottom="576dp"
        android:gravity="center"
        android:text="My Appointments"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TableLayout
        android:layout_width="359dp"
        android:layout_height="133dp"
        android:layout_marginTop="203dp"
        android:layout_marginBottom="395dp"
        android:stretchColumns="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow>

            <TextView
                android:background="#41D2E4"
                android:padding="3dip"
                android:text="Payment ID:"
                android:textColor="#A9151111" />

            <TextView
                android:id="@+id/getpayNo"
                android:background="#DF8484"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:background="#93C9E6"
                android:backgroundTint="#90D3F8"
                android:padding="3dip"
                android:text="Patient Name:"
                android:textColor="#A9151111" />

            <TextView
                android:id="@+id/getPatientName"
                android:background="#FAC7C7"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#000000" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:background="#41D2E4"
                android:padding="3dip"
                android:text="Phone Number:"
                android:textColor="#A9151111" />

            <TextView
                android:id="@+id/getPhoneNumber"
                android:background="#DF8484"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#000000" />


        </TableRow>

        <TableRow>

            <TextView
                android:layout_height="match_parent"
                android:background="#93C9E6"
                android:padding="3dip"
                android:text="NIC:"
                android:textColor="#A9151111" />

            <TextView
                android:id="@+id/getNIC"
                android:background="#FAC7C7"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#000000" />


        </TableRow>

        <TableRow>

            <TextView
                android:background="#41D2E4"
                android:padding="3dip"
                android:text="Age:"
                android:textColor="#A9151111" />

            <TextView
                android:id="@+id/getAge"
                android:background="#DF8484"
                android:gravity="center"
                android:padding="3dip"
                android:textColor="#000000" />


        </TableRow>


    </TableLayout>


    <Button
        android:id="@+id/edit"
        android:layout_width="85dp"
        android:layout_height="50dp"
        android:layout_marginStart="293dp"
        android:layout_marginTop="361dp"
        android:layout_marginBottom="320dp"
        android:backgroundTint="#388E3C"
        android:text="EDIT"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="162dp"
        android:layout_marginTop="362dp"
        android:layout_marginBottom="321dp"
        android:backgroundTint="#E63131"
        android:text="@string/delete"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="75dp"
        android:layout_height="45dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="599dp"
        android:layout_marginBottom="11dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/back"
        android:textColor="#D84747"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <LinearLayout
        android:layout_width="407dp"
        android:layout_height="45dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/input_bg"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="681dp">

        <ImageView
            android:id="@+id/view_app_to_home"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:src="@drawable/home_bottom" />

        <ImageView
            android:id="@+id/view_app_to_pat_prof"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/person_bottom" />

        <ImageView
            android:id="@+id/view_app_to_make_app"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/make_appointment" />

        <ImageView
            android:id="@+id/view_app"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:src="@drawable/event_available_bottom_red" />

        <ImageView
            android:id="@+id/view_app_logout"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:src="@drawable/login_bottom" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>